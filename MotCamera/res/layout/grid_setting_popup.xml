<?xml version="1.0" encoding="utf-8"?>
<com.motorola.camera.ui.v2.GridSettingPopup style="@style/SettingPopupWindow"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:background="@drawable/popup_bubble" android:layout_width="@dimen/setting_popup_window_width" android:layout_height="wrap_content">
        <FrameLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:minHeight="@dimen/popup_title_frame_min_height">
            <TextView android:id="@id/title" style="@style/PopupTitleText" />
        </FrameLayout>
        <ScrollView android:layout_width="fill_parent" android:layout_height="wrap_content">
            <com.motorola.camera.ui.v2.ExpandedGridView android:id="@id/settingList" style="@style/SettingGrid" />
        </ScrollView>
    </LinearLayout>
</com.motorola.camera.ui.v2.GridSettingPopup>