<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CameraAppTheme" parent="@android:style/Theme.Holo.NoActionBar.Fullscreen">
        <item name="android:colorBackground">@android:color/black</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:keepScreenOn">true</item>
        <item name="android:colorBackgroundCacheHint">@android:color/black</item>
    </style>
    <style name="DialogSettingPopupWindow">
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/setting_popup_right_margin</item>
        <item name="android:layout_centerInParent">true</item>
    </style>
    <style name="GridSettingItem">
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/setting_picker</item>
        <item name="android:paddingLeft">2.0dip</item>
        <item name="android:paddingTop">9.0dip</item>
        <item name="android:paddingRight">2.0dip</item>
        <item name="android:paddingBottom">9.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="GridSettingItemTitle">
        <item name="android:textSize">@dimen/grid_setting_item_text_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">1.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="InfoBarText">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:maxLines">1</item>
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:shadowRadius">1.6</item>
    </style>
    <style name="AlertPopupText">
        <item name="android:textSize">@dimen/setting_item_text_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">10.0dip</item>
    </style>
    <style name="MenuListItem">
        <item name="android:visibility">visible</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/setting_popup_right_margin</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <style name="SettingPopupWindow">
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/setting_popup_right_margin</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <style name="AlertPopupWindow">
        <item name="android:background">#bb000000</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    <style name="PopupTitleText">
        <item name="android:textSize">@dimen/popup_title_text_size</item>
        <item name="android:textColor">@color/popup_title_color</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">0.0dip</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="PopupTitleSeperator">
        <item name="android:background">@color/popup_title_color</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">2.0dip</item>
    </style>
    <style name="SettingGrid">
        <item name="android:paddingBottom">3.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/setting_item_list_margin</item>
        <item name="android:layout_marginRight">@dimen/setting_item_list_margin</item>
        <item name="android:horizontalSpacing">3.0dip</item>
        <item name="android:verticalSpacing">3.0dip</item>
        <item name="android:numColumns">@integer/dialog_num_columns</item>
        <item name="android:choiceMode">singleChoice</item>
    </style>
    <style name="SettingItemList">
        <item name="android:layout_gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">3.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="SettingItemText">
        <item name="android:textSize">@dimen/setting_item_text_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">@dimen/setting_item_text_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="SettingItemTitle">
        <item name="android:textSize">@dimen/setting_item_text_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="SettingRow">
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/setting_picker</item>
        <item name="android:paddingLeft">@dimen/setting_item_list_margin</item>
        <item name="android:paddingRight">@dimen/setting_item_list_margin</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="OtherSettingRow">
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/setting_picker</item>
        <item name="android:paddingLeft">@dimen/setting_item_list_margin</item>
        <item name="android:paddingTop">@dimen/setting_item_list_padding</item>
        <item name="android:paddingRight">@dimen/setting_item_list_margin</item>
        <item name="android:paddingBottom">@dimen/setting_item_list_padding</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="OtherSettingItemTitle">
        <item name="android:textSize">@dimen/setting_item_text_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>
    <style name="OtherSettingItemSummary">
        <item name="android:textSize">@dimen/setting_item_summary_text_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>
    <style name="OnScreenActionIcon">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/setting_picker</item>
        <item name="android:paddingTop">10.0dip</item>
        <item name="android:paddingBottom">10.0dip</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1.0</item>
    </style>
</resources>
